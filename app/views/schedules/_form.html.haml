= form_for @schedule do |f|
  - if @schedule.errors.any?
    #error_explanation
      %h2= "#{pluralize(@schedule.errors.count, "error")} prohibited this schedule from being saved:"
      %ul
        - @schedule.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :content, '概要'
    = f.text_field :content

  .field
    = f.hidden_field :action_type, :value => @action_type

  .field
    = f.label :termination_time, '終了時間'
    %br
    %br
    = f.datetime_select :termination_time,{default: default_new_termination_time, use_month_numbers: true},{class: "browser-default inline-date"}

  %br
  .actions
    = f.submit '保存', class: 'submit-btn'
